  <div id="last-played-div inner" class="col-xs-6 col-lg-4">
    <h4>you last played:</h4> 
    <div id="last-played-content" class="row">
      <div class="col-lg-6">  
        <h5 id="lastSong" class="no-margin-top"></h5> 
      </div>
      <div class="col-xs-4 col-lg-6">
        <i id="last-heart" class="fa fa-heart-o icon"></i>        
        <i id="last-rocket" class="icon fa fa-rocket "></i>
      </div>
    </div>
  </div>

</div>
